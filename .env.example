# JWT Secret Key
# IMPORTANT: Change this in production to a strong, random secret
JWT_SECRET=your-secret-key-change-in-production

# Server Port
PORT=3000

# SSL/HTTPS Configuration (optional)
# To enable HTTPS, provide paths to your SSL certificate files
# Leave blank or comment out to use HTTP mode
# SSL_KEY_PATH=/path/to/your/private-key.pem
# SSL_CERT_PATH=/path/to/your/certificate.pem
# SSL_CA_PATH=/path/to/your/ca-bundle.pem

# SMTP Configuration for sending magic link emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Storage Tracker <your-email@gmail.com>

# Application URL (used in magic link emails)
# Change to https:// if using SSL
APP_URL=http://localhost:3000
